@model InkInc.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BaselinePricing" class="control-label"></label>
                <input asp-for="BaselinePricing" class="form-control" />
                <span asp-validation-for="BaselinePricing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerHour" class="control-label"></label>
                <input asp-for="PricePerHour" class="form-control" />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstagramHandle" class="control-label"></label>
                <br/>
                @Html.TextBoxFor(model => model.InstagramHandle, new { placeholder = "@InstagramHandle" })
                <span asp-validation-for="InstagramHandle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                @Html.TextAreaFor(model => model.Biography, new { rows = 10, cols = 50, placeholder = "Tell us about yourself, including thematic preferences and specialties." })
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
